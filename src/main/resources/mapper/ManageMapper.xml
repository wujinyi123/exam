<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.system.exam.mapper.user.ManageMapper">
    <!--导入用户-->
    <insert id="insertUser" parameterType="com.system.exam.domain.qo.user.InsertUserQO">

    </insert>
    <!--所有学院代码-->
    <select id="listCollegeCode" resultType="java.lang.String">
        SELECT
            code
        FROM college
        WHERE state='1'
    </select>
    <!--所有班级代码-->
    <select id="listClazzNumber" resultType="java.lang.String">
        SELECT
            number
        FROM clazz
        WHERE state='1'
    </select>
    <!--查询账户是否存在-->
    <select id="isNumber" parameterType="com.system.exam.domain.qo.user.IsUserQO" resultType="int">
        SELECT
            count(1)
        FROM
        <choose>
            <when test="type=='teacher'.toString()">teacher</when>
            <otherwise>student</otherwise>
        </choose>
        WHERE state='1' and number=#{number}
    </select>

</mapper>